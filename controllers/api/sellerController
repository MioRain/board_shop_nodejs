const { Product, Category } = require('../../models')
const { imgurFileHandler } = require('../../helpers/file-helper')

const sellerController = {
  getProducts: async (req, res) => {
    try {
      const products = await Product.findAll({
        where: {
          userId: req.user.id
        },
        include: Category
      })

      res.json(products)
    } catch (err) {
      console.log(err)
      res.json({ error: err.message })
    }
  },
  getProduct: async (req, res) => {
    try {
      const product = await Product.findByPk(req.params.id, {
        include: Category
      })

      res.json(product)
    } catch (err) {
      console.log(err)
      res.json({ error: err.message })
    }
  },
  postProducts: async (req, res) => {
    try {
      const product = {}
      const { file } = req
      const { body } = req
      const imagePath = await imgurFileHandler(file)

      if (imagePath) product.imagePath =  imagePath

      Object.entries(body).forEach(([key, value]) => {
        if (key === 'isPublic') return product[key] = true
        product[key] = value
      });

      const createdProduct = await Product.create(product)

      res.json({ product: createdProduct })
    } catch (err) {
      console.log(err)
      res.json({ error: err.message })
    }
  },
  putProducts: async (req, res) => {
    try {
      await Product.update(req.body, {
        where: {
          id: req.params.id
        }
      })
      res.json({ message: 'success' })
    } catch (err) {
      console.log(err)
      res.json({ error: err.message })
    }
  },
  deleteProducts: async (req, res) => {
    try {
      const foundProduct = await Product.findByPk(req.params.id)
      foundProduct.destroy()
      res.json({ message: 'success' })
    } catch (err) {
      console.log(err)
      res.json({ error: err.message })
    }
  }
}

module.exports = sellerController